#include <iostream>
#include<math.h>

using namespace std;

int main()
{

    int n;
    cout<<"enter the number of rows";
    cin>>n;
    for(int i=1;i<=n;i++)
    {
        for(int k =1;k<=n-i;k++)
            cout<<" ";
        for(int j=1;j<=2*i-1;j++)
        {
            if(j%2==0)
            cout<<"A";
        else
            cout<<"*";
        }
        cout<<endl;
    }

    return 0;
}
